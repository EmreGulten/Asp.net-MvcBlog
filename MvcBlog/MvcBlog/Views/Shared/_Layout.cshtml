@using MvcBlog.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>MVC BLOG</title>
    <!-- Bootstrap core CSS -->
    <link href="~/Content/Kaynak/startbootstrap-blog-home-gh-pages/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="~/Content/Kaynak/startbootstrap-blog-home-gh-pages/css/blog-home.css" rel="stylesheet">
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"></script>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/Home/Index/">MVC Blog</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">
                            Home
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Hakkimizda/">Hakkımızda</a>
                    </li>
                    @*<li class="nav-item">
                        <a class="nav-link" href="#">Servisler</a>
                    </li>*@
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Iletisim">İletişim</a>
                    </li>


                </ul>


                <ul class="nav navbar-nav navbar-right top-nav">

                    @{
                        if (Session["uyeid"] != null)
                        {

                            <li class="nav-item dropdown no-arrow">


                                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown"><i class="fas fa-user-circle fa-fw user"></i> @Session["kullaniciadi"].ToString() <b class="caret"></b></a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                                    <a class="dropdown-item" href="/Uye/UyeProfil/@Session["uyeid"]">Profil</a>
                                    @if (Convert.ToInt32(Session["yetkiid"]) == 1)
                                    {
                                        <a class="dropdown-item" href="/Admin/Index">Admin Panel</a>
                                    }


                                    <a class="dropdown-item" href="/Uye/Edit/@Session["uyeid"]">Profil Düzenle</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="/Uye/Logout/">Çıkış</a>
                                  

                                </div>
                            </li>
                        }
                        else
                        {

                            <li class="nav-item">
                                <a class="nav-link" href="/Uye/Login">Giriş</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Uye/Create">Kayıt ol</a>
                            </li>
                        }
                    }


                </ul>

            </div>
        </div>
    </nav>
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <!-- Blog Entries Column -->
            <div class="col-md-8">

                @*Content*@
                @RenderBody()


            </div>
            <!-- Blog Post -->
            <!-- Sidebar Widgets Column -->
            <div class="col-md-4">
                <!-- Search Widget -->
                @Html.Partial("BlogArama")
                <!-- Categories Widget -->
                <div class="card my-4">

                    @{
                        Html.RenderAction("KategoriPartial", "Home");
                    }

                </div>
                <!-- Side Widget -->
                <div class="card my-4">

                    @{
                        Html.RenderAction("SonYorumlar", "Home");
                    }

                </div>

                <div class="card my-4">

                    @{
                        Html.RenderAction("EncokOkunan", "Home");
                    }

                </div>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
    <!-- Footer -->
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; @DateTime.Now.Year</p>
        </div>
       
        <!-- /.container -->
    </footer>

    <!-- Bootstrap core JavaScript -->
    <link href="@Url.Content("~/Content/Css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <script src="~/Content/Kaynak/startbootstrap-blog-home-gh-pages/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/Kaynak/startbootstrap-blog-home-gh-pages/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
